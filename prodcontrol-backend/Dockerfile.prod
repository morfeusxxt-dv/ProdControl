# Use Eclipse Temurin OpenJDK 17
FROM eclipse-temurin:17

# Set working directory
WORKDIR /app

# Copy visible files first
COPY pom.xml ./
COPY Dockerfile* ./
COPY render.yaml ./
COPY src ./src

# Copy hidden files explicitly
COPY mvnw ./
COPY .mvn ./.mvn

# Make mvnw executable
RUN chmod +x ./mvnw

# Build the application
RUN ./mvnw clean package -DskipTests

# Expose port
EXPOSE 8080

# Run the application
CMD ["java", "-jar", "target/prodcontrol-backend-0.0.1-SNAPSHOT.jar"]
