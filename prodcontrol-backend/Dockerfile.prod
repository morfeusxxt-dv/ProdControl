# Use Eclipse Temurin OpenJDK 17
FROM eclipse-temurin:17

# Set working directory
WORKDIR /app

# Copy all files (without .dockerignore)
COPY . .

# Make mvnw executable
RUN chmod +x ./mvnw

# Build the application
RUN ./mvnw clean package -DskipTests

# Expose port
EXPOSE 8080

# Run the application
CMD ["java", "-jar", "target/prodcontrol-backend-0.0.1-SNAPSHOT.jar"]
