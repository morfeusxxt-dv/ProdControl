# Use Eclipse Temurin OpenJDK 17
FROM eclipse-temurin:17

# Set working directory
WORKDIR /app

# Copy all files
COPY . .

# Check if mvnw exists and make it executable
RUN if [ -f ./mvnw ]; then chmod +x ./mvnw; else echo "mvnw not found"; ls -la; fi

# Build the application
RUN ./mvnw clean package -DskipTests

# Expose port
EXPOSE 8080

# Run the application
CMD ["java", "-jar", "target/prodcontrol-backend-0.0.1-SNAPSHOT.jar"]
